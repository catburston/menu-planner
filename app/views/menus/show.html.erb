<!-- show.html.erb -->
<p>
  <strong>MENU:</strong>
  <%= @menu.title %>
</p>

<p>
  <strong>Recipes:</strong>
  <ul>
    <% @menu.recipes.each do |r| %>
      <li>
        <%= link_to r.title, recipe_path(r) %>
      </li>
    <% end %>
  </ul>
</p>

<p>
  <%= link_to 'Edit', edit_menu_path(@menu) %> | <%= link_to 'Delete', menu_path(@menu), method: :delete, data: { confirm: 'Click OK to delete this menu'} %>
</p>

<h2>Shopping List</h2>

<table>
  <tr>
    <th>Quantity</th>
    <th>Ingredient</th>
    <th>Grocery</th>
  </tr>
  <% @shopping_list.each do |k, v| %>
  <% i = Ingredient.find_by title: k %>
    <tr>
      <td>
        <%= v %>
      </td>
      <td>
        <%= k %>
      </td>
      <td>
        <%= i.grocery_item %>
      </td>
    </tr>
  <% end %>
</table>
